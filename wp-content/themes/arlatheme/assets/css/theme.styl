// Imported Stylesheets
@import 'jquery.bxslider.css'
@import 'bootstrap.min.css'
@import '../fonts/icons.css'
@import '../fonts/DSari-font.css'
@import 'customize.styl'
@import 'nib/vendor'

vendor-prefixes = webkit moz o ms official

// Color Variables
white = #ffffff
black = #0a0a16
gray = #727272
lightGray = #a1a3a7
darkBlue = #0e303f
navColor = #374b56
orange = #f5821f
darkOrange = #d36f24
lightBlue = #62d0df
yellow = #fec00f
darkYellow = #f99b1c
green = #c2d64c
darkGreen = #b1be46

// Color for Buttons

// Color for Social icons

// Font Variables
bannerTitle = 'DSariBlack', Trebuchet MS, sans-serif
bannerTxt = 'DSariMedium', Trebuchet MS, sans-serif
copyTxt = 'DSariLight', Trebuchet MS, sans-serif
title = 'DSariBold', Trebuchet MS, sans-serif
mainTitle = 'DSariHeavy', Trebuchet MS, sans-serif
subtitle = 'DSariBold', Trebuchet MS, sans-serif
contentTitle = 'DSariThin', Trebuchet MS, sans-serif

// -------------- Theme Styles -------------- //

// General Styles
html
	font-size 16px
	max-width 100%

body
	color gray
	background white
	font-family copyTxt
	font-size 62.5% /* 1em = 10px */
	max-width 100%

a
	color darkBlue
	transition all .2s ease-in-out
	text-decoration underline

	&:hover 
		color orange

strong
	font-family title

::-webkit-input-placeholder
	color #2C5871
:-moz-placeholder
	color #2C5871
::-moz-placeholder
	color #2C5871
:-ms-input-placeholder
	color #2C5871

.ui-loader
	display none

.hidden-seo
	height 0
	left -9999px
	position absolute
	top -9999px
	width 0

.header,
.sliding-banner 
	font-size 1.6em

// Header
.header 
	display block
	position absolute
	top 0
	width 100%
	z-index 10

	&.sticky-header
		padding-bottom 0
		position fixed
		top 0
		transition all 0.2s ease-in-out

		.main-nav
			background darkBlue
			border-bottom 4px solid black

			a 
				color white

				&:hover
					color orange

.main-nav 
	background white
	border-radius 5px
	border-bottom 4px solid lightGray
	color navColor
	margin 2em 0
	overflow hidden
	padding 10px 20px 

	.logo
		float left
		margin 0 20px 0 0
		width 180px

		a 
			display block 
			width 100%

			img 
				display block
				width 100%

	ul 
		float right
		margin 1.5em 0 0 0
		padding 0

		li 
			display inline-block
			margin 0 0.7em

			a 
				color navColor
				font-family mainTitle
				text-decoration none
				text-transform uppercase

			:hover
				color orange
				text-decoration none

	.devices-menu 
		display none
		color navColor
		float right
		font-size 1.5em
		font-weight normal
		margin 20px 10px 0 0

		&:hover
			color orange
			text-decoration none

// Blog Banner Cover
.blog-banner-cover
	background #a6dae9 url(../img/blog-banner.jpg) center bottom no-repeat
	background-size 960px 220px
	display block
	color white
	font-size 1.6em
	height 350px
	position relative
	width 100%
	z-index 0

	h1 
		display inline-block

// Blog Banner
.blog-banner-container
	background darkBlue
	display block
	color white
	font-size 1.6em
	position relative
	width 100%
	z-index 0

	figure.blog-banner
		float left
		max-height 300px
		overflow hidden
		width 100%

		img
			float left
			width 100%

// Blog Post Container 
.blog-post-container
	float left
	font-size 1.6em 
	padding 0 0 2em 0
	width 100%

	.post-icon
		display block
		margin-top -57px
		position relative
		width 100%
		z-index 100

		img
			display block
			margin 0 auto
			width 115px

	section 
		.post-title
			color lightGray
			font-family mainTitle
			font-size 2.5em

	article
		padding-top 2em

		.post-title
			color darkBlue
			font-family mainTitle
			font-size 2.5em
			text-align center

			hr 
				border none
				border-bottom 1px solid lightGray
				margin 0.3em auto 0.5em auto
				width 40%

		.post-subtitle
			font-family subtitle
			padding-bottom 2em
			text-align center

		figure
			img
				float left
				height auto
				width 100%

		img
			height auto
			margin-bottom 10px
			max-width 100%

		h3, h4, h5, h6 
			margin-top 20px

		h1
			color darkBlue
			font-family mainTitle
			font-size 2.5em

		h2
			color orange
			font-family contentTitle
			margin-top 30px

		h3, h4, h5
			font-family subtitle
		
		h3
			font-size 26px

		h4
			font-size 22px

		h5 
			font-size 18px

		h6 
			font-family copyTxt
			font-size 16px

		ul 
			margin 0 0 15px 25px
			padding 0

			li 
				list-style disc

	code
		background #eeeeee
		color gray
		float left
		margin 0 0 20px 0
		padding 20px
		width 100%
		white-space pre-wrap

	.newsletter-form
		background lightBlue
		border-bottom 4px solid #2298a8
		border-radius 5px
		color white
		margin-top 2em
		overflow hidden
		padding-bottom 1.5em

		h3 
			color darkBlue
			display block
			font-family subtitle
			text-align center
			width 100%

			hr 
				border none
				border-bottom 1px solid #2298a8
				margin 0.5em auto
				width 20%
		
		.wpcf7-form-control-wrap 
			float left
			margin-bottom 1em
			width 49%

			input[type="text"],
			input[type="email"]
				background white
				border none
				border-bottom 3px solid #2298a8
				border-radius 4px
				color gray
				float left
				margin-bottom 1em
				padding 6px 10px
				width 100%

			&:nth-child(even)
				float right

			.wpcf7-not-valid-tip
				color darkBlue
				float left
				width 100%

		input[type="submit"]
			background orange
			border none
			border-bottom 3px solid darkOrange
			border-radius 5px
			color white
			display block
			float right
			font-family bannerTxt
			font-size 1.2em
			padding 7px 0
			text-align center
			text-shadow 1px 1px 2px darkOrange
			width 30%

			&:hover
				background yellow
				border-bottom 3px solid darkYellow
				text-shadow 1px 1px 2px darkYellow

			&:active
				border-bottom 0px solid transparent
				margin 3px auto 0 auto

		::-webkit-input-placeholder
			color lightGray
		:-moz-placeholder
			color lightGray
		::-moz-placeholder
			color lightGray
		:-ms-input-placeholder
			color lightGray

		.wpcf7-mail-sent-ok,
		.wpcf7-validation-errors
			border none !important
			font-family title
			font-size 1.5em
			text-align center

	.user-avatar
		img 
			width 100%
			height 100%

	.autor
		color darkBlue
		float left
		font-family mainTitle
		font-size 1.3em
		text-decoration none

	.autor-title
		clear both
		color lightGray
		display block
		margin-bottom 10px

	.autor-social
		float left
		margin 0 0 1em 0
		padding 0
		width 100%

		li 
			display inline-block
			margin-right 0.5em

			a.social-icon
				span 
					background lightBlue
					border-radius 50%
					color white
					display inline-block
					max-height 32px 
					max-width 32px
					overflow hidden
					padding 8px
					vertical-align middle

				&:hover
					span 
						background orange

	article.post-preview
		box-sizing border-box
		float left
		padding 0 10px
		width 50%

		&:nth-child(odd)
			clear left

		.post-title
			font-size 2em
			text-align left

			a 
				text-decoration none

			hr
				display none
		
		.post-subtitle
			font-family copyTxt
			min-height 62px
			padding-bottom 0.3em
			text-align left

		.read-more
			color orange
			float right
			margin-bottom 1em
			text-align right
			text-decoration none

			&:hover 
				color lightBlue

		.post-preview-thumbnail
			background lightGray
			float left
			max-height 200px
			margin-bottom 1em
			overflow hidden
			width 100%

			img
				display inline-block
				vertical-align middle
				width 100%

// Comments 
.comments-area 
	float left
	overflow hidden
	width 100%

	.comment-list
		float left
		padding 0 0 0 80px
		width 100%

		.comment 
			float left
			list-style none
			position relative
			width 100%

			.comment-body
				background #f5f5f5
				border-radius 5px
				float left
				margin 0 0 20px 0
				padding 20px
				width 100%

				footer 
					.comment-author
						border-bottom 1px solid #cccccc
						color darkBlue
						float left
						font-family title
						padding 0 10px 10px 0
						width 100%

						img
							left -80px
							position absolute
							top 0

					.comment-metadata
						display none

				.comment-content
					float left
					margin 20px 0 10px 0
					width 100%
				.reply 
					float left
					margin 10px 0
					width 100%

					.comment-reply-link
						color orange
						float right

						&:hover 
							color darkBlue

			.children
				float left
				width 100%

				.comment
					.comment-body
						background #e1f6f9

					.children
						float left
						padding 0
						width 100%

.comments-title 
	color lightBlue
	float left 
	font-family copyTxt
	margin 40px 0 20px 0
	padding 0 0 10px 0
	width 100%

// Comment Form 
#respond 
	float left
	width 100% 

#reply-title 
	color orange
	font-family copyTxt

#commentform 
	float left
	width 100%

	label
		float left
		width 100%

	input, textarea 
		border 1px solid #dddddd
		border-bottom 3px solid #dddddd
		border-radius 5px
		float left
		margin-bottom 10px
		width 100%

	#submit
		background orange
		border none
		border-bottom 3px solid darkOrange
		border-radius 5px
		color white
		display block
		float right
		font-family bannerTxt
		font-size 1.2em
		padding 7px 0
		text-align center
		text-shadow 1px 1px 2px darkOrange
		width 40%

		&:hover
			background yellow
			border-bottom 3px solid darkYellow
			text-shadow 1px 1px 2px darkYellow

		&:active
			border-bottom 0px solid transparent
			margin 3px auto 0 auto

// Share Plugin
.sharedaddy
	margin-top 20px

.sharedaddy, .sd-social, .sd-title, .sd-content
	float left
	width 100%

.sd-title 
	float left
	font-family copyTxt !important
	font-size 1em !important

.sd-content ul li > a.sd-button
	display block !important
	float left
	font-family bannerTxt !important
	text-align center !important

	&:hover
		background yellow
		border-bottom 3px solid darkYellow
		text-shadow 1px 1px 2px darkYellow

	&:active
		border-bottom 0px solid transparent
		margin 3px auto 0 auto

// Pagin Navigation
.paging-navigation
	border-top 1px solid #eeeeee
	float left
	margin 20px 0
	width 100%

	h1 
		color orange
		font-family contentTitle
		font-size 1.8em
		text-align lef

	.pagination 
		float left
		font-size 1.2em
		text-align center
		width 100%
		
		a, span
			display inline-block 
			border-right 1px solid lightGray
			padding 0 15px

			&:last-child
				border none

//Sidebar
.sidebar 
	.sidebar-title
		color lightBlue
		font-family bannerTxt

	.sidebar-nav
		float left
		margin-bottom 20px
		padding 0
		width 100%

		.search-form 
			.screen-reader-text
				display none

		ul 
			margin 0
			padding 0

			li 
				border-bottom 1px solid #cccccc
				padding 5px 0 5px 5px

				a 
					text-decoration none

// Sliding Banner 
.sliding-banner
	display block
	position relative
	width 100%
	z-index 0 

	.bxslider-container
		display block
		overflow hidden
		width 100%
		position relative
		z-index 0

		ul.bxslider
			float left
			margin 0
			position relative
			padding 0
			z-index 0

			li 
				float left
				margin 0
				padding 157px 0 0 0
				position relative
				width 100%

				img 
					position absolute
					width 400px

				.banner-title
					font-family bannerTitle
					font-size 2.75em
					position absolute
					right 0
					text-align right
					top 60%

					span
						font-family copyTxt
						font-size 0.7em

				&.startups
					background darkBlue url(../img/sliding-banner/startups-2.png) center center no-repeat
					background-size cover
					color white

				&.tu-proyecto
					background #F38630 url(../img/sliding-banner/requirements-2.png) center center no-repeat
					background-size cover
					color white

				&.ideas
					background #15b0bf url(../img/sliding-banner/ideas-2.png) center center no-repeat
					background-size cover
					color white

				&.gracias,
				&.error
					background #15b0bf
					color white

					.banner-title
						margin-top 120px
						text-align center

		.platicanos-btn
			background green
			border-bottom 3px solid darkGreen
			border-radius 5px
			color white
			display block
			font-family bannerTxt
			font-size 1.5em
			margin 0 auto
			padding 7px 0
			position relative
			text-align center
			text-decoration none
			text-shadow 1px 1px 2px darkGreen
			width 250px
			top -25px
			z-index 10

			&:hover
				background yellow
				border-bottom 3px solid darkYellow
				text-decoration none
				text-shadow 1px 1px 2px darkYellow

			&:active
				border-bottom 0px solid transparent
				margin -120px auto 0 auto

.bx-wrapper .bx-viewport
	box-shadow none

.bx-viewport
	border none !important
	left 0 !important
	margin 0
	padding 0

.bx-wrapper .bx-pager 
	bottom 80px
	position relative
	text-align right

.bx-wrapper .bx-pager.bx-default-pager a
	background rgba(255,255,255,0.4)
	border-radius 50%
	height 20px
	text-indent 9999999999px
	width 20px
	
	&.active
		background lightBlue

	&:hover
		background rgba(255,255,255,1)

.bx-wrapper .bx-controls-direction a
	transition none

// Servicios
#servicios 
	float left
	font-size 1.6em 
	margin -28px 0 0 0
	padding 3.5em 0 2em 0
	width 100%

	.servicio
		margin-bottom 2em
		text-align center

		.title 
			color darkBlue
			font-family title
			font-size 1.5em

			hr 
				border none
				border-bottom 1px solid darkBlue
				display block
				margin 0.6em auto
				width 20%

		.servicio-icono
			display block
			width 100%

			img
				display block
				margin 0 auto
				width 115px

//Nuestro Proceso
#nuestro-proceso
	background linear-gradient(160deg, #1695a4 0%,#1695a4 50%,#15b0bf 50%,#15b0bf 100%)
	color white
	float left
	font-size 1.6em 
	padding 3em 0
	width 100%

	.title 
		font-family title
		text-align center

	.proceso-columna
		text-align center

		.subtitle
			display block
			font-family title
			margin 0 auto
			padding-bottom 10px
			text-align center
			width 60%

			hr 
				border none
				border-bottom 1px solid white
				display block
				margin 0.6em auto
				width 30%

		.process-icon
			clear both
			display block
			height 62px
			margin 0 auto 1em auto
			width 62px

			img
				display block
				margin 0 auto
				width 62px

//Nosotros
#nosotros 
	background #fefefe
	float left
	font-size 1.6em
	padding 3em 0
	width 100%

	.title 
		display block
		color darkBlue
		font-family bannerTitle
		margin 0 auto 0.8em auto
		text-align center
		text-transform uppercase
		max-width 380px

		hr 
			border none
			border-bottom 1px solid lightGray
			display block
			margin 0.6em auto
			width 60%

	article 
		text-align justify

//Contactanos
#contactanos 
	background #2C5871 url(../img/contact-graphic.png) center top no-repeat
	color white
	float left
	font-size 1.6em
	padding 265px 0 0 0
	width 100%

	.contactanos-header
		border-bottom 1px dashed rgba(255,255,255,0.15)
		padding-bottom 2em

	.title
		display block
		font-family bannerTitle
		text-align center
		text-transform uppercase

		hr 
			border none
			border-bottom 1px solid rgba(255,255,255,0.5)
			display block
			margin 0.2em auto 0.6em auto
			width 10%

	.contact-options
		display block
		margin 0
		padding 0
		width 100%

		li 
			float left
			margin-bottom 10px
			width 100%

			span 
				background white
				border-radius 50%
				color #2C5871
				display inline-block
				font-size 1.2em
				margin 3px 5px 0 0
				padding 5px
				vertical-align middle

			a 
				color white
				text-decoration none

				&:hover
					color yellow

	.contact-form
		form 
			input,
			textarea,
			select 
				background darkBlue
				border none
				border-bottom 3px solid #081b23
				border-radius 4px
				color white
				margin-bottom 1em
				padding 6px 10px

			select
				height 34px
				min-height 34px
				width 100%

			.enviar-btn
				background orange
				border-bottom 3px solid darkOrange
				border-radius 5px
				color white
				display block
				float right
				font-family bannerTxt
				font-size 1.2em
				padding 7px 0
				text-align center
				text-shadow 1px 1px 2px darkOrange
				width 150px

				&:hover
					background yellow
					border-bottom 3px solid darkYellow
					text-shadow 1px 1px 2px darkYellow

				&:active
					border-bottom 0px solid transparent
					margin 3px auto 0 auto

		.wpcf7-not-valid-tip
			color yellow
			float left
			margin-bottom 10px

		.wpcf7-response-output
			border none
			font-family title
			font-size 1.3em
			margin-top 0

		.captcha 
			.wpcf7-not-valid-tip
				float left
				margin 10px 0 20px 20px

		.ajax-loader
			clear both
			display block
			margin 0 auto

#footer
	background darkBlue
	color rgba(255,255,255,0.6)
	float left
	font-size 1.6em
	padding 1em 0
	width 100%

	p 
		margin 0

//Old Browsers
.chromeframe
	background white
	border-bottom 1px solid lightGray
	box-shadow 0 4px 10px rgba(0,0,0,0.35)
	display block
	font-size 1.6em
	margin 0
	padding 10px 0
	position absolute
	top 0
	text-align center
	width 100%
	z-index 1000

	.btn-primary
		background #2c5871
		border none
		border-bottom 3px solid darkBlue
		border-radius 5px
		text-shadow 1px 1px 2px darkBlue

		&:hover
			background orange
			border-bottom 3px solid darkOrange
			text-shadow 1px 1px 2px darkOrange

		&:active
			border-bottom 0px solid transparent
			margin 3px auto 0 auto

	.btn-success
		background green
		border none
		border-bottom 3px solid darkGreen
		border-radius 5px
		text-shadow 1px 1px 2px darkGreen

		&:hover
			background orange
			border-bottom 3px solid darkOrange
			text-shadow 1px 1px 2px darkOrange

		&:active
			border-bottom 0px solid transparent
			margin 3px auto 0 auto

// Search Form 
.search-form 
	display block
	margin 0 auto
	width 320px

	label
		float left

	.search-field
		border 1px solid #cccccc
		border-bottom 3px solid #cccccc
		border-radius 5px 0 0 5px
		padding 3px 5px 2px 5px

	.search-submit
		background green
		border none
		border-bottom 3px solid darkGreen
		border-radius 0 5px 5px 0
		color white
		float left
		padding 5px 20px 1px 20px
		text-shadow 1px 1px 2px darkGreen

		&:hover
			background orange
			border-bottom 3px solid darkOrange
			text-shadow 1px 1px 2px darkOrange

		&:active
			border-bottom 0px solid transparent
			margin 3px auto 0 auto

// Media Queries
@media screen and (max-width:1200px)
	.sliding-banner
		.bxslider-container
			ul.bxslider
				li
					.banner-title
						font-size 2.2em

					img
						max-width 350px

					&.ideas
						// background-size 800px 230px

@media screen and (max-width:992px)
	.main-nav
		ul
			border-top 1px solid #eee
			display none
			float left
			padding-top 1em
			width 100%

		.devices-menu 
			display block
			text-decoration none

	.sliding-banner
		.bxslider-container
			ul.bxslider
				li
					// padding-top 100px
					// .banner-title
					// 	font-size 1.7em

					img
						max-width 280px

					&.startups
						img
							top 40px

					&.tu-proyecto
						img
							top 30px

					&.ideas
						// background-size 600px 173px

						// .banner-title
						// 	margin-top 70px

@media screen and (max-width:768px)
	.sticky-header
		.main-nav
			border-radius 0
			margin-top 0px

	.main-nav
		font-size 0.9em
		ul
			text-align center
			li 
				display inline-block
				float none
				font-size 1.2em
				padding 6px 0
				width 100%
			
	.sliding-banner
		.bxslider-container
			ul.bxslider
				li
					padding-top 100px
					
					img
						display none
					
					.banner-title
						top 80px
						width 80%
						left 50%
						transform translateX(-50%)
						margin-top 0

					&.startups,
					&.tu-proyecto,
					&.ideas
